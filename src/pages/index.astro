---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const siteTitle = "Muda Visi Mandiri";
const siteDescription = "Website resmi Muda Visi Mandiri";
---

<Layout title={siteTitle}>
  <Header />
  
  <main id="primary" class="site-main">
    <article class="post type-post status-publish format-standard hentry ast-article-single">
      <div class="entry-content clear" itemprop="text">
        <!-- Hero Section -->
        <div class="elementor-section elementor-top-section">
          <div class="elementor-container">
            <div class="elementor-column">
              <div class="elementor-widget-wrap">
                <h1>Selamat Datang di {siteTitle}</h1>
                <p class="elementor-heading-title">
                  {siteDescription}
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Content Sections -->
        <div class="elementor-section elementor-top-section">
          <div class="elementor-container">
            <!-- Add your main content sections here -->
          </div>
        </div>
      </div>
    </article>
  </main>

  <Footer />
</Layout>

<style>
  .site-main {
    margin: 0 auto;
    padding: 1rem;
    max-width: var(--ast-container-default-width);
  }

  .elementor-section {
    position: relative;
    padding: 90px 20px;
  }

  .elementor-container {
    max-width: 1140px;
    margin: 0 auto;
  }

  .elementor-column {
    width: 100%;
  }

  .elementor-widget-wrap {
    padding: 10px;
  }

  h1 {
    font-size: 2.25rem;
    font-weight: 600;
    line-height: 1.4em;
    margin-bottom: 1rem;
  }
</style>
